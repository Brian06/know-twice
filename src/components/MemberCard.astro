---
import { Image } from 'astro:assets';

export interface Props {
  src: string;
  alt?: string;
  classes?: string;
}

const { src, alt = 'Twice Member', classes = '' } = Astro.props;
---

<div
  class={`w-15 h-25 md:w-15 md:h-25 lg:w-21 lg:h-31 group overflow-hidden rounded-s-xl hover:border-2 hover:cursor-pointer ${classes}`}
>
  <Image
    src={src}
    class="h-full w-full transition-all duration-300 group-hover:translate-y-5 group-hover:scale-120"
    width={100}
    height={100}
    alt={alt}
  />
</div>
