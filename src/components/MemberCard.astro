---
import { Image } from 'astro:assets'

export interface Props {
  src: string;
  alt?: string;
  classes?: string;
}

const { src, alt = "Twice Member", classes = "" } = Astro.props;
---

<div class={`w-21 h-31 group overflow-hidden rounded-s-xl hover:border-2 hover:cursor-pointer ${classes}`}>
  <Image src={src} class="w-full h-full group-hover:scale-120 group-hover:translate-y-5 transition-all duration-300" width={100} height={100} alt={alt} />
</div>
