---
import Link from '../assets/link.svg';

export interface Props {
  icon: any;
  label: 'Birthday:' | 'Nationality:' | 'Color:' | 'Instagram:';
  value: string;
  link?: string;
  colorClass?: string;
}

const { icon: Icon, label, value, link, colorClass } = Astro.props;
---

<div class="flex justify-between rounded-2xl bg-white p-4 drop-shadow-md">
  <div class="flex items-center gap-2">
    <Icon width={18} height={18} />
    <p class="">{label}</p>
  </div>

  {
    link ? (
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-magenta flex items-center gap-1 text-gray-500 transition-colors duration-200 hover:underline"
      >
        {value}
        <Link width={15} height={15} />
      </a>
    ) : (
      <div class="flex items-center gap-2">
        <p class="text-gray-500">{value}</p>
        {label === 'Color:' && (
          <div class={`h-4 w-4 rounded-full ${colorClass}`} />
        )}
      </div>
    )
  }
</div>
