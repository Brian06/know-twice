---
export interface Props {
  icon: any;
  title: string;
  items: string[];
  class?: string;
}

const { icon: Icon, title, items, class: className } = Astro.props;
---

<div class={`rounded-2xl bg-white p-4 drop-shadow-md ${className || ''}`}>
  <div class="mb-2 flex items-center gap-2">
    <Icon width={18} height={18} />
    <p class="text-magenta font-bold">{title}</p>
  </div>
  <ul class="marker:text-magenta list-inside list-disc">
    {items.map((item) => <li>{item}</li>)}
  </ul>
</div>
