---
export interface Props {
  icon: any;
  title: string;
  items: string[];
}

const { icon: Icon, title, items } = Astro.props;
---

<div class="rounded-2xl bg-white p-4 h-full">
  <div class="flex items-center gap-2">
    <Icon width={18} height={18} />
    <p>{title}</p>
  </div>
  <ul class="marker:text-magenta list-inside list-disc">
    {items.map((item) => <li>{item}</li>)}
  </ul>
</div>
