---
export interface Props {
  icon: any;
  label: string;
  value: string;
}

const { icon: Icon, label, value } = Astro.props;
---

<div class="flex justify-between rounded-2xl bg-white p-4 drop-shadow-md">
  <div class="flex items-center gap-2">
    <Icon width={18} height={18} />
    <p>{label}</p>
  </div>
  <p class="text-gray-500">{value}</p>
</div>
