---
import Layout from '../../layouts/Layout.astro';
import { MEMBERS } from '../../const/members';
import type { GetStaticPaths } from 'astro';
import Calendar from '../../assets/member-info/calendar.svg';
import Nationality from '../../assets/member-info/nationality.svg';
import Color from '../../assets/member-info/color.svg';
import Emoji from '../../assets/member-info/emoji.svg';
import Instagram from '../../assets/member-info/instagram.svg';
import Positions from '../../assets/member-info/positions.svg';
import InfoCard from '../../components/InfoCard.astro';
import ListCard from '../../components/ListCard.astro';

const { id } = Astro.params;
const member = MEMBERS.find((member) => member.id === id);
if (!member) return Astro.redirect('/404');

// const description = `Biografía, estadísticas y clips de ${member.name}, participante de La Velada del Año V. ${member.bio.substring(0, 120)}${member.bio.length > 120 ? '...' : ''}`
// const canonical = `https://www.infolavelada.com/luchador/${id}`

export const getStaticPaths = (() => {
  return MEMBERS.map((member) => ({
    params: { id: member.id },
  }));
}) satisfies GetStaticPaths;
---

<Layout>

<div class="container mx-auto px-4 py-16 md:py-32">
  <div class="flex flex-col gap-6 lg:flex-row w-full">

    <div class="flex-1">
  
      <div class="rounded-2xl bg-white p-4 drop-shadow-md">
        <div class="bg-magenta relative mx-auto h-[184px] w-[184px] rounded-full mb-6">
        </div>
        <p class="text-center text-lg font-bold mb-1">Nayeon</p>
        <p class="text-center text-sm  mb-1">Im Nayeon</p>
        <p class="text-center text-sm">🐰</p>
    
        <div class="flex flex-col gap-5 mt-6">
          <InfoCard icon={Calendar} label="Birthday:" value="1995.09.22" />
          <InfoCard icon={Nationality} label="Nationality:" value="Korean" />
          <InfoCard icon={Color} label="Color:" value="Apricot" />
          <InfoCard icon={Instagram} label="Instagram:" value="nayeon_im" />
        </div>
      </div>
    </div>
  
    <div class="flex-1">
  
      <div class="flex flex-col gap-6 md:flex-row w-full mb-6">
        <div class="flex-1">
          <ListCard
            icon={Positions}
            title="Positions"
            items={['Leader', 'Main Vocalist', 'Visual']}
            class="h-full"
          />
        </div>
        <div class="flex-1">
          <ListCard
            icon={Positions}
            title="Songs"
            items={[
              "I Can't Stop Me",
              'What Is Love',
              'Cheer Up',
              'Like OOH-AHH',
              'Cheer Up',
            ]}
            class="h-full"
          />
        </div>
      </div>
  
      <ListCard
      icon={Positions}
      title="Fun Facts"
      items={[
        'She is the first member to be born in 1995.',
        'She is the first member to be born in 1995.',
      ]}
    />
  
  </div>
  
</div>

</Layout>
