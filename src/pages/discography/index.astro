---
import Layout from '../../layouts/Layout.astro';
import { DISCOGRAPHY } from '../../const/discography';
import DiscographyFilters from '../../components/Preact/DiscographyFilters';

const typeOptions = [
  { value: 'all', label: 'All Types' },
  { value: 'mini-album', label: 'Mini Album' },
  { value: 'full-album', label: 'Full Album' },
  { value: 'single', label: 'Single' },
  { value: 'repackage', label: 'Repackage' },
  { value: 'digital', label: 'Digital' },
  { value: 'ost', label: 'OST' },
];

const marketOptions = [
  { value: 'all', label: 'All Markets' },
  { value: 'korean', label: 'Korean' },
  { value: 'japanese', label: 'Japanese' },
  { value: 'english', label: 'English' },
];

const artistOptions = [
  { value: 'twice', label: 'TWICE' },
  { value: 'misamo', label: 'MISAMO' },
  { value: 'nayeon', label: 'Nayeon' },
  { value: 'jeongyeon', label: 'Jeongyeon' },
  { value: 'momo', label: 'Momo' },
  { value: 'sana', label: 'Sana' },
  { value: 'jihyo', label: 'Jihyo' },
  { value: 'mina', label: 'Mina' },
  { value: 'dahyun', label: 'Dahyun' },
  { value: 'chaeyoung', label: 'Chaeyoung' },
  { value: 'tzuyu', label: 'Tzuyu' },
];

const sortOptions = [
  { value: 'latest', label: 'Latest' },
  { value: 'oldest', label: 'Oldest' },
  { value: 'a-z', label: 'A-Z' },
  { value: 'z-a', label: 'Z-A' },
];
---

<Layout
  title="TWICE Discography"
  description="TWICE's complete discography, including all albums, singles, and digital releases."
>
  <div class="container mx-auto px-4 py-16 md:py-32">
    <h1 class="text-4xl font-bold mb-8">TWICE Discography</h1>

    <DiscographyFilters 
      client:load
      albums={DISCOGRAPHY}
      typeOptions={typeOptions}
      marketOptions={marketOptions}
      artistOptions={artistOptions}
      sortOptions={sortOptions}
    />
  </div>
</Layout>
